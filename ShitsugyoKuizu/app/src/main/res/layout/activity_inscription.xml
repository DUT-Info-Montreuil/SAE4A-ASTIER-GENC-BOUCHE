<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InscriptionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inputType="text"
            android:hint="Email ou pseudo"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/email_Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity=""
            android:inputType="text"
            android:hint="Email"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/mdp_Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity=""
            android:inputType="textPassword"
            android:hint="Mot de Passe"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/confirmMdp_Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity=""
            android:inputType="textPassword"
            android:hint="Confirmez le mot de Passe"
            android:padding="15dp"/>


        <Button
            android:id="@+id/inscription_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="S'inscrire"
            android:textSize="15dp"
            android:backgroundTint="#6D071A"/>

    </LinearLayout>


</LinearLayout>