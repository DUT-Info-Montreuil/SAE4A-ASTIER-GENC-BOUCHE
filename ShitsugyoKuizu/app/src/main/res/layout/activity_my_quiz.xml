<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/account_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="0.5"
            android:background="@color/design_default_color_background"
            android:backgroundTint="#095228"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/profilIconWhite" />
    </LinearLayout>

    <Button
        android:id="@+id/creerQuiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Créer un quiz"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:backgroundTint="#D3D3D3"/>

    <TextView
        android:id="@+id/vosQuizPlusJoues_textview"
        android:layout_width="523dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Vos quiz les plus joués"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dernierQuizCree_textview"
        android:layout_width="523dp"
        android:layout_height="237dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Vos derniers quiz créés"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/tousVosQuizz_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Tous vos quiz"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:backgroundTint="#D3D3D3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:background="@color/design_default_color_background"
            android:backgroundTint="#095228"
            android:scaleType="center"
            app:srcCompat="@drawable/plusBlack" />

        <ImageButton
            android:id="@+id/quiz_button"
            android:layout_width="117dp"
            android:layout_height="82dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:background="@color/design_default_color_background"
            android:backgroundTint="#095228"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/interrogationWhite" />

        <ImageButton
            android:id="@+id/trophy_button"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:background="@color/design_default_color_background"
            android:backgroundTint="#095228"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/trophyWhite" />

    </LinearLayout>

</LinearLayout>